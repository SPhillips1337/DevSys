# DevSys environment variables (copy to .env and customize)
# Do NOT commit your .env file â€” it is ignored by .gitignore

# SSH user password for n8nuser (used if N8N_PASSWORD_AUTH is not 'false')
N8N_USER_PASSWORD=change_me_secure_password

# Optional public key to add to n8nuser authorized_keys (single-line, wrap as needed)
# N8N_USER_PUBKEY="ssh-rsa AAAAB3... user@host"

# Whether to allow password authentication for SSH (set to 'false' to require keys)
N8N_PASSWORD_AUTH=true

# Manager API token for authenticating agent and user requests
MANAGER_API_TOKEN=change_me_manager_token

# Manager API token is required if set; agents read MANAGER_API_TOKEN from their env to authenticate
# MANAGER_API_TOKEN can be any string; in production use a strong secret and consider better auth mechanisms.

# Runner selection: auto will prefer remote-ssh if REMOTE_* vars present, else host-docker if docker socket is available, else local
DEPLOY_RUNNER=auto
TEST_RUNNER=auto
DOCKER_SOCKET_PATH=/var/run/docker.sock

# Remote test host (if you want to use an external machine for tests)
REMOTE_TEST_HOST=192.168.5.69
REMOTE_TEST_USER=devsys
REMOTE_TEST_SSH_PORT=22
# Path inside the container where the SSH private key is mounted via Docker secrets or volume
REMOTE_TEST_SSH_KEY=/run/secrets/remote_test_key
# Optionally provide known_hosts file path
REMOTE_TEST_KNOWN_HOSTS=/run/secrets/remote_known_hosts

# External deploy host (optional)
EXTERNAL_DEPLOY_HOST=
EXTERNAL_DEPLOY_USER=
EXTERNAL_DEPLOY_SSH_PORT=22
EXTERNAL_DEPLOY_SSH_KEY=
# Path to known_hosts for external deploy host (recommended)
EXTERNAL_DEPLOY_KNOWN_HOSTS=/run/secrets/external_deploy_known_hosts
# If you want the agent to run `docker compose up` on the remote host after copying artifacts, set to 'true'
EXTERNAL_DEPLOY_RUN_COMPOSE=false

# If you need to allow insecure SSH (not recommended), set to 'true' to bypass known_hosts enforcement
#REMOTE_ALLOW_INSECURE_SSH=false

# GitHub/OpenAI configuration for coding-agent
GITHUB_TOKEN=
OPENAI_API_KEY=
# Model selection for opencode (e.g., gpt-5.1, gpt-4o)
OPENCODE_MODEL=gpt-4o

# Ollama configuration for phoneticization (example)
OLLAMA_URL=https://automatically-bedford-horse-solutions.trycloudflare.com/
OLLAMA_KEY=dummy_key
OLLAMA_MODEL=qwen2.5:7b-instruct-q4_K_M
